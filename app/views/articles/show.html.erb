<div class = "d-flex create-art-container">
  <div class= "full-article-image" style ="background: no-repeat center/cover url('<%= show_picture(@article) %>');">
  <h1></h1>
  </div>
  <div class= "d-flex flex-column article-preview">
      <h2 class="articles-cat-title chivo-bold articles-auto-width font-s-2">
          <%= @article.title%>
      </h2>
      <div class="article-author d-flex a-items-center j-content-between ">
        <div>
          <strong>By <%= @article.author.name%></strong>
          <%=link_to(content_tag(:i, nil, class: "far fa-thumbs-up"), article_votes_path(article_id: @article.id), 
              class: "article-vote",
              method: :post) if signed_in?%>
          <strong><%= @article.votes_count%></strong>
        </div>
        <div>
          <%=link_to(content_tag(:i, nil, class: "far fa-edit"), edit_article_path(@article.id), 
          class: "article-vote") if @article.author.id == session[:user_id]%>
        </div>
            
      </div>
      <div class="font-s-1-2 article-text">
        <p><%= @article.text%></p>
      </div>
    </div>
</div>




